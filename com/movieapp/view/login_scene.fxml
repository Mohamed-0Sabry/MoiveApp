<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: #fcd3e1; -fx-background-radius: 20; -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.movieapp.controller.LoginController">
    <!-- Illustration Side with background image -->
    <StackPane style="-fx-background-image: url('/com/movieapp/view/image/movie-night-background.jpg'); -fx-background-size: cover; -fx-background-position: center; -fx-background-radius: 20 0 0 20;" HBox.hgrow="ALWAYS">
        <ImageView fx:id="illustrationImage" fitHeight="560" fitWidth="440" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 20, 0, 0, 0);" StackPane.alignment="CENTER_LEFT" />
    </StackPane>

    <!-- Form Card Side -->
    <AnchorPane style="-fx-background-color: white; -fx-background-radius: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 20, 0, 0, 0);" HBox.hgrow="ALWAYS">
        <!-- Login Form -->
        <VBox fx:id="loginForm" alignment="TOP_CENTER" spacing="15" style="-fx-padding: 30 40 30 40;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
         <HBox prefHeight="60.0" prefWidth="301.0">
            <children>
                  <Label style="-fx-font-size: 42px; -fx-font-family: 'Comic Sans MS', 'Arial Black', cursive; -fx-font-weight: bold; -fx-text-fill: #fcd3e1;" text="Welcome Back!" />
            </children>
         </HBox>
         <HBox prefHeight="25.0" prefWidth="197.0">
            <children>
                  <Label style="-fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-text-fill: #222; -fx-padding: 0 0 5 0;" text="Please log in to your account" />
            </children>
         </HBox>
         <Region prefHeight="19.0" prefWidth="255.0" />

            <!-- Email Field -->
            <VBox alignment="TOP_LEFT" spacing="5" style="-fx-pref-width: 100%;">
                <Label style="-fx-font-size: 13px; -fx-font-family: 'Arial'; -fx-text-fill: #222;" text="Email Address :" />
                <TextField fx:id="loginEmail" promptText="Enter your email" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #f5f7fa; -fx-border-color: transparent; -fx-padding: 10; -fx-font-size: 14px;" />
            </VBox>

            <!-- Password Field with Toggle -->
            <VBox alignment="TOP_LEFT" spacing="5" style="-fx-pref-width: 100%;">
                <Label style="-fx-font-size: 13px; -fx-font-family: 'Arial'; -fx-text-fill: #222;" text="Password :" />
                <PasswordField fx:id="loginPassword" promptText="Enter your password" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #f5f7fa; -fx-border-color: transparent; -fx-padding: 10; -fx-font-size: 14px;" />
            </VBox>

            <!-- Login Button -->
            <Button maxWidth="Infinity" onAction="#handleLogin" style="-fx-background-color: #fcd3e1; -fx-text-fill: white; -fx-font-size: 24px; -fx-font-family: 'Comic Sans MS', 'Arial Black', cursive; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 0 10 0; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 10, 0, 0, 0);" text="Login" />

            <!-- Sign Up Link -->
            <HBox alignment="CENTER_RIGHT" spacing="5">
                <Label style="-fx-font-size: 14px; -fx-font-family: 'Arial'; -fx-text-fill: #222;" text="Don't have an account?" />
                <Hyperlink fx:id="toggleLink" onAction="#toggleForms" style="-fx-font-size: 14px; -fx-text-fill: #fcd3e1; -fx-font-weight: bold;" text="Sign Up" />
            </HBox>
        </VBox>

        <!-- Sign Up Form -->
        <VBox fx:id="signupForm" alignment="TOP_CENTER" spacing="15" style="-fx-padding: 30 40 30 40;" visible="false" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                  <Label style="-fx-font-size: 42px; -fx-font-family: 'Comic Sans MS', 'Arial Black', cursive; -fx-font-weight: bold; -fx-text-fill: #fcd3e1;" text="Create Account" />
            </children>
         </HBox>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                  <Label style="-fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-text-fill: #222; -fx-padding: 0 0 5 0;" text="Please fill in your details" />
            </children>
         </HBox>

            <!-- Name Field -->
            <VBox alignment="TOP_LEFT" spacing="5" style="-fx-pref-width: 100%;">
                <Label style="-fx-font-size: 13px; -fx-font-family: 'Arial'; -fx-text-fill: #222;" text="Full Name" />
                <TextField fx:id="signupName" promptText="Enter your full name" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #f5f7fa; -fx-border-color: transparent; -fx-padding: 10; -fx-font-size: 14px;" />
            </VBox>

            <!-- Email Field -->
            <VBox alignment="TOP_LEFT" spacing="5" style="-fx-pref-width: 100%;">
                <Label style="-fx-font-size: 13px; -fx-font-family: 'Arial'; -fx-text-fill: #222;" text="Email Address" />
                <TextField fx:id="signupEmail" promptText="Enter your email" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #f5f7fa; -fx-border-color: transparent; -fx-padding: 10; -fx-font-size: 14px;" />
            </VBox>

            <!-- Password Field -->
            <VBox alignment="TOP_LEFT" spacing="5" style="-fx-pref-width: 100%;">
                <Label style="-fx-font-size: 13px; -fx-font-family: 'Arial'; -fx-text-fill: #222;" text="Password" />
                <PasswordField fx:id="signupPassword" promptText="Create a password" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #f5f7fa; -fx-border-color: transparent; -fx-padding: 10; -fx-font-size: 14px;" />
            </VBox>

            <!-- Confirm Password Field -->
            <VBox alignment="TOP_LEFT" spacing="5" style="-fx-pref-width: 100%;">
                <Label style="-fx-font-size: 13px; -fx-font-family: 'Arial'; -fx-text-fill: #222;" text="Confirm Password" />
                <PasswordField fx:id="signupConfirmPassword" promptText="Confirm your password" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #f5f7fa; -fx-border-color: transparent; -fx-padding: 10; -fx-font-size: 14px;" />
            </VBox>

            <!-- Sign Up Button -->
            <Button maxWidth="Infinity" onAction="#handleSignup" style="-fx-background-color: #fcd3e1; -fx-text-fill: white; -fx-font-size: 24px; -fx-font-family: 'Comic Sans MS', 'Arial Black', cursive; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 0 10 0; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 10, 0, 0, 0);" text="Create Account" />

            <!-- Login Link -->
            <HBox alignment="CENTER_RIGHT" spacing="5">
                <Label style="-fx-font-size: 14px; -fx-font-family: 'Arial'; -fx-text-fill: #222;" text="Already have an account?" />
                <Hyperlink fx:id="toggleLinkSignup" onAction="#toggleForms" style="-fx-font-size: 14px; -fx-text-fill: #fcd3e1; -fx-font-weight: bold;" text="Login" />
            </HBox>
        </VBox>
    </AnchorPane>
</HBox>